	signingkey = 361ACF45238D9AAF
[push]
  default = current
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[pull]
  rebase = true
[rerere]
	enabled = true
[init]
	defaultBranch = master
[commit]
	template = ~/.config/git/commit-template.txt
	gpgsign = true
[pager]
	branch = false
	tag = false
[tag]
	gpgSign = true
[include]
  path = ~/.gitconfig.local
